# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=true
ENABLE_LLM=false
ENABLE_OCR=false

# Supabase - Client-side (accessible in browser, REQUIRED for auth)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase - Server-side only (for API routes and admin operations)
NEXT_SUPABASE_URL=https://your-project.supabase.co
NEXT_SUPABASE_ANON_KEY=your-anon-key
NEXT_SUPABASE_ROLE_KEY=your-service-role-key
NEXT_SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_DB_URL=postgresql://postgres:password@localhost:54322/postgres

# Anthropic API (for LLM features)
# Set ANTHROPIC_API_KEY to your CacheGPT key (cgpt_sk_...) or direct Anthropic key (sk-ant-...)
# Set ANTHROPIC_BASE_URL to https://api.cachegpt.com/v1 for CacheGPT routing
# Leave ANTHROPIC_BASE_URL unset for direct Anthropic API
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_BASE_URL=

# Observability
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Storage
SUPABASE_STORAGE_BUCKET=attachments
