{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@web/*": ["./*"],
      "@db/*": ["../../packages/db/*"],
      "@llm/*": ["../../packages/llm/*"],
      "@pdfkit/*": ["../../packages/pdfkit/*"],
      "@ocr/*": ["../../packages/ocr/*"],
      "@policy/*": ["../../packages/policy/*"],
      "@greenlight/db": ["../../packages/db"],
      "@greenlight/db/*": ["../../packages/db/*"],
      "@greenlight/llm": ["../../packages/llm"],
      "@greenlight/llm/*": ["../../packages/llm/*"],
      "@greenlight/pdfkit": ["../../packages/pdfkit"],
      "@greenlight/pdfkit/*": ["../../packages/pdfkit/*"],
      "@greenlight/ocr": ["../../packages/ocr"],
      "@greenlight/ocr/*": ["../../packages/ocr/*"],
      "@greenlight/policy": ["../../packages/policy"],
      "@greenlight/policy/*": ["../../packages/policy/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
